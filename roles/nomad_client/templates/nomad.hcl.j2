data_dir   = "/opt/nomad/data"
datacenter = "{{ datacenter }}"

client {
  enabled           = true
  network_interface = "eth0"

  host_volume "docker-socket" {
    path      = "/run/docker.sock"
    read_only = true
  }
}

acl {
  enabled = true
}

tls {
  http      = true
  rpc       = true

  ca_file   = "/opt/nomad/tls/ca.crt"
  cert_file = "/opt/nomad/tls/agent.crt"
  key_file  = "/opt/nomad/tls/agent.crt.key"

  verify_server_hostname = true
  verify_https_client    = true
}

consul {
  token = "{{ consul_token }}"
}

vault {
  enabled   = true
  address   = "https://active.vault.service.consul:8200"
  ca_file   = "/etc/certs.d/ca.crt"
  cert_file = "/opt/nomad/tls/client.crt"
  key_file  = "/opt/nomad/tls/client.crt.key"
}

telemetry {
  prometheus_metrics         = true
  disable_hostname           = true
  publish_allocation_metrics = true
  publish_node_metrics       = true
}

plugin "docker" {
  config {
    allow_privileged = true
    extra_labels = ["job_name", "job_id", "task_group_name", "task_name", "namespace", "node_name", "node_id"]
  }
}